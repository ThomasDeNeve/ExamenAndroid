<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="room"
            type="com.example.hier.models.Room" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/roomImage"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_marginStart="16dp"
            android:padding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/room_vanvoor" /> <!--TODO: add imageurls as parameters to Room-->

        <TextView
            android:id="@+id/roomName"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:breakStrategy="simple"
            android:fontFamily="@font/trebms"
            android:padding="4dp"
            android:text="@{room.name}"
            android:textColor="@color/primary_pink"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/roomImage"
            app:layout_constraintStart_toEndOf="@+id/roomImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The executive room" />

        <TextView
            android:id="@+id/dagprijsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trebms"
            android:padding="4dp"
            android:text="@string/dagprijs_label"
            app:layout_constraintLeft_toRightOf="@id/roomImage"
            app:layout_constraintStart_toStartOf="@+id/roomName"
            app:layout_constraintTop_toBottomOf="@id/roomName" />

        <TextView
            android:id="@+id/dagprijsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trebms"
            android:padding="4dp"
            android:text="@{String.valueOf(room.priceFullDay)}"
            app:layout_constraintLeft_toRightOf="@id/dagprijsLabel"
            app:layout_constraintTop_toBottomOf="@id/roomName"
            tools:text="145" />

        <TextView
            android:id="@+id/grootteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trebms"
            android:padding="4dp"
            android:text="@{String.valueOf(room.numberOfSeats)}"
            app:layout_constraintLeft_toRightOf="@id/roomImage"
            app:layout_constraintStart_toStartOf="@+id/roomName"
            app:layout_constraintTop_toBottomOf="@id/dagprijsLabel"
            tools:text="7" />

        <TextView
            android:id="@+id/grootteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trebms"
            android:padding="4dp"
            android:text="@string/grootte_label"
            app:layout_constraintLeft_toRightOf="@id/grootteText"
            app:layout_constraintTop_toBottomOf="@id/dagprijsLabel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>