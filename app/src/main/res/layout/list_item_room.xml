<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="room"
            type="com.example.hier.models.Room" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/roomImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/room_vanvoor" /> <!--TODO: add imageurls as parameters to Room-->

    <TextView
        android:id="@+id/roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{room.name}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/roomImage"
        android:padding="4dp"
        tools:text="Vanvoor"
        style="@style/TextAppearance.AppCompat.Headline"/>

    <TextView
        android:id="@+id/dagprijsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dagprijs_label"
        app:layout_constraintTop_toBottomOf="@id/roomName"
        app:layout_constraintLeft_toRightOf="@id/roomImage"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/dagprijsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{String.valueOf(145)}"
        app:layout_constraintTop_toBottomOf="@id/roomName"
        app:layout_constraintLeft_toRightOf="@id/dagprijsLabel"
        android:padding="4dp"
        tools:text="145"/>

    <TextView
        android:id="@+id/grootteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{String.valueOf(room.numberOfSeats)}"
        app:layout_constraintTop_toBottomOf="@id/dagprijsLabel"
        app:layout_constraintLeft_toRightOf="@id/roomImage"
        android:padding="4dp"
        tools:text="7"/>
    <TextView
        android:id="@+id/grootteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grootte_label"
        app:layout_constraintTop_toBottomOf="@id/dagprijsLabel"
        app:layout_constraintLeft_toRightOf="@id/grootteText"
        android:padding="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>